{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["es6", "es2017", "es2018", "dom", "dom.iterable"],
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["src/*"],
      "classes/*": ["src/classes/*"],
      "config/*": ["src/config/*"],
      "controllers/*": ["src/controllers/*"],
      "handlers/*": ["src/handlers/*"],
      "interfaces/*": ["src/interfaces/*"],
      "loaders/*": ["src/loaders/*"],
      "middlewares/*": ["src/middlewares/*"],
      "models/*": ["src/models/*"],
      "src": ["src"],
      "classes": ["src/classes"],
      "config": ["src/config"],
      "controllers": ["src/controllers"],
      "handlers": ["src/handlers"],
      "interfaces": ["src/interfaces"],
      "loaders": ["src/loaders"],
      "middlewares": ["src/middlewares"],
      "models": ["src/models"]
    }
  },
  "include": ["src/**/*"]
}
